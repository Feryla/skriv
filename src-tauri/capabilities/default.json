{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-remove",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/**",
        "$HOME/**",
        "$HOME/**/.*",
        "$DOCUMENT/**",
        "$DOCUMENT/**/.*",
        "$DESKTOP/**",
        "$DESKTOP/**/.*",
        "$DOWNLOAD/**",
        "$DOWNLOAD/**/.*",
        "**",
        "**/.*"
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "core:window:allow-set-title",
    "updater:default",
    "process:allow-restart"
  ]
}
